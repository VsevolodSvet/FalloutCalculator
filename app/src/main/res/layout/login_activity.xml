<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rusted_metal_texture"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="20dp">

    <EditText
        android:id="@+id/login_enter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="50"
        android:background="@drawable/rounded_edittext"
        android:enabled="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="@string/login_uppercase"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="#33999999" />

    <EditText
        android:id="@+id/password_enter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="50"
        android:background="@drawable/rounded_edittext"
        android:enabled="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="@string/password_uppercase"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="#33999999" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="70">

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            android:contentDescription="@string/enter_uppercase"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_button" />

        <TextView
            android:id="@+id/enter_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:enabled="false"
            android:fontFamily="monospace"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/enter_uppercase"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="25sp"
            android:textStyle="normal|bold" />
    </FrameLayout>

    <EditText
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="50"
        android:background="@drawable/rounded_edittext"
        android:enabled="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="@string/login_uppercase"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="#33999999" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="50"
        android:background="@drawable/rounded_edittext"
        android:enabled="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="@string/password_uppercase"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="#33999999" />

    <EditText
        android:id="@+id/confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="50"
        android:background="@drawable/rounded_edittext"
        android:enabled="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="@string/confirm_password_uppercase"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="#33999999" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="70">

        <ImageButton
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            android:contentDescription="@string/register_uppercase"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_button" />

        <TextView
            android:id="@+id/register_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:enabled="false"
            android:fontFamily="monospace"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/register_uppercase"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="25sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>